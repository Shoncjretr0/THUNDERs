        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/loc"
        android:layout_width="73dp"
        android:layout_height="65dp"
        android:layout_marginStart="176dp"
