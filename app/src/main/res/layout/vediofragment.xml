<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ggh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/gh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="413dp"
            android:layout_height="475dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="0dp"
        android:gravity="center_horizontal"
        android:text="post" />

    <TextView
        android:id="@+id/des"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:text="description" />

    <EditText
        android:id="@+id/editTextdes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="write image description"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="197dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:textStyle="bold"
        android:layout_marginTop="91dp"
        android:text="tag's" />

    <EditText
        android:id="@+id/editTexttag"
        android:layout_width="327dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="115dp"
        android:ems="10"
        android:hint="write  your's tag"
        android:inputType="textPostalAddress" />

    <ImageView
        android:id="@+id/imgcam"
        android:layout_width="105dp"
        android:layout_height="79dp"
        android:layout_alignTop="@+id/textViewcam"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ic_camera_black_24dp" />

    <ImageView
        android:id="@+id/imggaall"
        android:layout_width="105dp"
        android:layout_height="79dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="57dp"
        android:layout_toEndOf="@+id/imgcam"
        app:srcCompat="@drawable/gallery" />

    <ImageView
        android:id="@+id/imagepic"
        android:layout_width="370dp"
        android:layout_height="170dp"
        android:layout_below="@+id/editTexttag"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/textViewcam"
        android:layout_width="109dp"
        android:layout_height="102dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:text="        camera" />

    <TextView
        android:id="@+id/textViewgal"
        android:layout_width="108dp"
        android:layout_height="100dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="95dp"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:text="         gallery" />

</RelativeLayout>