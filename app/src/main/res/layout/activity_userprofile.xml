<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/usrname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="name"
        android:importantForAutofill="no"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/usremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usrname"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="187dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="e-mail"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/usrphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usremail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="phone no"
        android:importantForAutofill="no"
        android:inputType="phone" />

    <EditText
        android:id="@+id/usraddrs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextdes"
        android:layout_alignParentStart="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="address"
        android:importantForAutofill="no"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/pincdusr"
        android:layout_width="214dp"
        android:layout_height="48dp"
        android:layout_below="@+id/usrphone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="city" />

    <EditText
        android:id="@+id/editTextdes"
        android:layout_width="214dp"
        android:layout_height="88dp"
        android:layout_below="@+id/pincdusr"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="description"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/usrbttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usraddrs"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:text="submit" />


</RelativeLayout>