<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/usrname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="77dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="name"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:textColorHint="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/usremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usrname"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="e-mail"
            android:textColorHint="#ffff"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextdes" />

        <EditText
            android:id="@+id/usrphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usremail"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="phone no"
            android:importantForAutofill="no"
            android:textColorHint="#ffff"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pincdusr" />

        <EditText
            android:id="@+id/usraddrs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="31dp"
            android:textColorHint="#ffff"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="address"
            android:importantForAutofill="no"
            android:inputType="textPostalAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usrname" />

        <EditText
            android:id="@+id/pincdusr"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/usrphone"
            android:layout_alignParentStart="true"
            android:layout_marginTop="26dp"
            android:ems="10"
            android:textColorHint="#ffff"
            android:gravity="center_horizontal"
            android:hint="city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usraddrs" />

        <EditText
            android:id="@+id/editTextdes"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_below="@+id/pincdusr"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="description"
            android:textColorHint="#ffff"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usrphone" />

        <Button
            android:id="@+id/usrbttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usraddrs"
            android:layout_alignParentStart="true"
            android:layout_marginStart="161dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="162dp"
            android:gravity="center_horizontal"
            android:text="submit"
            android:textColorHint="#ffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usremail" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>